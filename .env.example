# --- Cấu hình Database (Prisma) ---
# Định dạng: mysql://USER:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URL="mysql://root:password@localhost:3306/HotelBooking"

# --- Cấu hình Server ---
PORT=8000
FRONTEND_URL="http://localhost:3000"

# --- Bảo mật & Xác thực (JWT) ---
# Chuỗi bí mật để mã hóa token (Có thể gõ lung tung dài dài là được)
JWT_SECRET="your_super_secret_random_string_here"
JWT_EXPIRES_IN="1d"

# --- Upload ảnh (Cloudinary) ---
# Lấy tại: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# --- Đăng nhập Google (OAuth2) ---
# Lấy tại: https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# --- Thanh toán (Stripe) ---
# Lấy tại: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"

# --- AI Chatbot (OpenRouter) ---
# Lấy tại: https://openrouter.ai/keys
OPENROUTER_API_KEY="sk-or-v1-your_openrouter_key"